#include <stdio.h>

int main(void)
{
    int test;
    scanf("%d", &test);
    char array[80];
    int sum = 0;
    int right = 0;
    
    for (int j = 1; j <= test; j++)
    {   
        scanf("%s", &array);
        

        for (int i = 0; i < sizeof(array); i++)
        {
            if (array[i] == 'O')
            {
                right++;
                sum = sum + right;
            }
            else if (array[i] == 'X')
            {
                right = 0;
            }
            else
            {
                sum = 0;
                right = 0;
                break;
                
            }
            
        }
        
    }
    return 0;
}
